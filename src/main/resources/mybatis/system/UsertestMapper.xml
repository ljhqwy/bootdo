<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.UsertestDao">

	<select id="get" resultType="com.bootdo.system.domain.UsertestDO">
		select `id`,`username` from usertest where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.system.domain.UsertestDO">
		select `id`,`username` from usertest
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="username != null and username != ''"> and username = #{username} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from usertest
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="username != null and username != ''"> and username = #{username} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.system.domain.UsertestDO" useGeneratedKeys="true" keyProperty="id">
		insert into usertest
		(
			`username`
		)
		values
		(
			#{username}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.system.domain.UsertestDO">
		update usertest 
		<set>
			<if test="username != null">`username` = #{username}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from usertest where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from usertest where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>